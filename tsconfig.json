{
  "compilerOptions": {
    "typeRoots": ["./typings"],
    "target": "ESNext",
    "types": ["vite/client"],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": [ "src/*" ],
      "*":["src/api/*"]
    }
  },
  "include": [
    "./src",
    "./src/*"
  ]
}